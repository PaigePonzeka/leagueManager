%p#notice= notice
%h1
  = @team.name
  - if user_is_team_manager(@team) || is_admin?
    = link_to '', edit_team_path(@team), {:class => "icon-edit"}

%table.table.table-striped.list-table
  %th{:colspan => 2}
    Team Roster
  - @players.each do |p|
    %tr
      %td= link_to "#{name(p.user)}", p.user
      - if user_is_team_manager(@team) || is_admin?
        %td= link_to "", "#", { :method => :delete, :confirm => "Remove Player #{@team.name}'s  from roster?", :class=> 'js-remove-player icon-remove', :title => "Remove player from roster", 'data-team' => @team.id, 'data-player' =>p.user.id}

\#{link_to 'Back', teams_path}