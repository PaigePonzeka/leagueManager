%h1 Users
%table.table.list-table.table-striped
  %tr
    %th Name
    %th
    %th
    %th
  - @users.each do |user|
    %tr
      %td= link_to "#{name(user)}", user
     
      - if is_admin?
        %td= link_to '', edit_user_path(user),  {:class => "icon-edit"}
        %td= link_to '', user, method: :delete , data: { confirm: 'Are you sure?' }, :class => "icon-remove"
%br/
= link_to 'New User', new_user_path