= form_for @field do |f|
  - if @field.errors.any?
    #error_explanation
      %h2= "#{pluralize(@field.errors.count, "error")} prohibited this field from being saved:"
      %ul
        - @field.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :park_id
    =f.select :park_id, options_for_select(Park.all.collect {|p| [ p.name, p.id ] })
  .actions
    = f.submit 'Save'
