= form_for(@team) do |f|
  - if @team.errors.any?
    #error_explanation
      %h2
        = pluralize(@team.errors.count, "error")
        prohibited this team from being saved:
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    %ul
      -@players.each do |p|
        %li
          =name(p.user)
          = link_to "delete", p, method: :delete,
                                     data: { confirm: "You sure?" }
  .actions
    = f.submit
