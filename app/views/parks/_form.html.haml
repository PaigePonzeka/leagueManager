= form_for(@park, :html => {:class => "form-horizontal"}) do |f|
  - if @park.errors.any?
    #error_explanation
      %h2= "#{pluralize(@park.errors.count, "error")} prohibited this park from being saved:"
      %ul
        - @park.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :url, :class => "control-label"
    .controls
      = f.text_field :url
  .control-group
    = f.label :name, :class => "control-label"
    .controls
      = f.text_field :name
  .control-group
    = f.label :directions_by_car, :class => "control-label"
    .controls
      = f.text_area :directions_by_car, :rows => 5, :class => 'js-editor'
  .control-group
    = f.label :directions_by_transit, :class => "control-label"
    .controls
      = f.text_area :directions_by_transit, :rows => 5, :class => 'js-editor'  
  .form-actions
    = f.submit 'Save', :class=> "btn btn-primary"
